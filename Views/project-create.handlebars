<div class="row">
	<div class="col-7">
		<div class="container-fluid card bg-dark">
			<div class="card-header card-header-primary">
				<h4 class="card-title text-white">
					<i class="fa fa-plus-circle" aria-hidden="true"></i>
					New Social Project Application
				</h4>
			</div>
			<form class="form-group card-body" action="/projects" method="POST">
				<div class="form-row">
					<div class="col-12">
						<table class="table table-sm table-striped table-bordered">
							<tbody>
								<tr>
									<th>
										<label for="">File Ref N<sup>o</sup> </label>
									</th>
									<th>
										<input
											type="text"
											onkeyup="this.value = this.value.toUpperCase().trim(' ')"
											name="FileRefNo"
											class="form-control"
											placeholder="(Required)"
											required
										/>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">Name Of Applicant </label>
									</th>
									<th>
										<input
											type="text"
											name="ApplicantName"
											class="form-control"
											placeholder="(Required)"
											required
										/>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">Date Of Application</label>
									</th>
									<th>
										<input
											type="date"
											name="ApplicationDate"
											class="form-control"
											placeholder="(Optional)"
										/>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">Description</label>
									</th>
									<th>
										<textarea
											name="ProjectDescription"
											class="form-control"
											placeholder="Write your description here..."
											cols="30"
											rows="3"
										></textarea>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">Project Type</label>
									</th>
									<th>
										<select name="ProjectType" class="form-control">
											<option value="" disabled selected>Select</option>
											<option value="1">Normal Project</option>
											<option value="2">Once-Off Project</option>
										</select>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">Number Of Beneficiaries</label>
									</th>
									<th>
										<input
											type="number"
											step="1"
											min="0"
											class="form-control"
											name="Beneficiary"
											placeholder="(Optional)"
										/>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">Review Date</label>
									</th>
									<th>
										<input
											type="date"
											name="DateReviewed"
											class="form-control"
											placeholder="(Optional)"
										/>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">Funding Sector</label>
									</th>
									<th>
										<select class="form-control" name="FundingSector">
											<option value="" selected disabled>Select</option>
											{{#each sectors}}
												<option value="{{this.ID}}">{{this.Sector}}</option>
											{{/each}}
										</select>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">Contractor Name</label>
									</th>
									<th>
										<input
											type="text"
											name="ContractorName"
											class="form-control"
											placeholder="(Optional)"
										/>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">District</label>
									</th>
									<th>
										<select name="District" class="form-control" required>
											<option value="" selected disabled>Select</option>
											{{#each districts}}
												<option
													value="{{this.ID}}"
												>{{this.DistrictName}}</option>
											{{/each}}
										</select>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">Requested Amount</label>
									</th>
									<th>
										<input
											type="number"
											step="1"
											min="0"
											class="form-control"
											placeholder="(Required)"
											name="AmountRequested"
											required
										/>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">Project Promoter</label>
									</th>
									<th>
										<input
											type="text"
											name="ProjectPromoter"
											class="form-control"
											placeholder="(Optional)"
										/>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">Contact Address</label>
									</th>
									<th>
										<input
											type="text"
											name="ContactAddress"
											class="form-control"
											placeholder="(Optional)"
										/>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">Contact Phone</label>
									</th>
									<th>
										<input
											type="text"
											name="ContactPhone"
											class="form-control"
											placeholder="(Required)"
										/>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">Co-Financier</label>
									</th>
									<th>
										<input
											type="text"
											placeholder="(Optional)"
											class="form-control"
											name="CoFinancier"
										/>
									</th>
								</tr>
								<tr>
									<th>
										<label for="">Project Stakeholders</label>
									</th>
									<th>
										<input
											type="text"
											placeholder="Separate values by Comma"
											class="form-control"
											name="ProjectStakeholders"
										/>
									</th>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				<div class="form-row">
					<div class="col-12">
						<p
							class="text-danger text-center p-2 px-4 text-white"
							style="padding-left: 15px;"
						>
							Make Sure All Required Fields Are Completed Before Submission!
						</p>
					</div>
				</div>
				<div class="sixteen text-right wide field mt-3">
					<button class="btn btn-outline-warning">Clear Form
						<i class="icon save"></i></button>
					|
					<button class="btn btn-success">Submit Data
						<i class="fa fa-floppy-o" aria-hidden="true"></i></button>
				</div>
			</form>
			<div class="four wide column"></div>
		</div>
	</div>
</div>