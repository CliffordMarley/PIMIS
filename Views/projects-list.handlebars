<div class="row">
  <div class="col-12">
    {{!-- <button class="btn btn-outline-primary"><i class="fa fa-search" aria-hidden="true"></i> Advanced Search</button> |  --}}
    <a href="/project-create" class="btn btn-info"><i class="fa fa-plus-square" aria-hidden="true"></i>  New Application</a>  
  </div>
</div>
<div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title "><i class="fa fa-th-list" aria-hidden="true"></i> Projects List</h4>
                  {{!-- <p class="card-category">All Projects</p> --}}
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-hover table-sm table-striped table-bordered " id="projects_table">
                      <thead class=" text-primary">
                          <th>Ref</th>
                           <th>Applicant Name</th>
                           <th>Sector</th>
                           <th>District</th>
                           
                           <th>Beneficiaries</th>
                           <th>Amount</th>
                           <th>Date_Applied</th>
                           {{!-- <th>Status</th> --}}
                           <th style="color:white;"></th>
                           <th style="color:white;"></th>
                      </thead>
                      <tbody>
                         {{#each projects}}
                              <tr>
                                    <td>{{this.FileRefNo}}</td>
                                    <td>{{this.ApplicantName}}</td>
                                    <td>{{this.FundingSector}}</td>
                                    <td>{{this.DistrictName}}</td>
                                    <td>{{this.Beneficiary}}</td>
                                    <td>{{#ifnoteq this.AmountRequested null}} {{formatCurrency this.AmountRequested}} {{/ifnoteq}}</td>
                                    <td>{{this.DateRequested}}</td>

                                    <td>
                                       <div style="display:inline !important;" >
                                          <a href="project-view?FileRefNo={{this.FileRefNo}}" class="btn btn-sm btn-primary d-inline">View <i class="fa fa-eye" aria-hidden="true"></i></a>
                                       </div>
                                     
                                    </td>
                                    <td>
                                       <div  style="display:inline !important;" >
                                          <a href="project-edit?FileRefNo={{this.FileRefNo}}"  class="btn btn-sm btn-warning d-inline">Edit <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                       </div>
                                    </td>
                              </tr>
                           {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <script>
              $(document).ready(()=>{
                $("#projects_table").DataTable({
                  pageLength:50
                })
              })
            </script>