<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title">
           <div class="row">
            {{!-- <div class="col-6">System Users</div> --}}
            <div class="col-12 text-right">
              <a href="/register" class="btn text-right btn-secondary">Create New User</a>
            </div>
          </div>
        </h4>
              
    </div>
    <div class="card-body">
           <div class="table-responsive">
                    <table class="table table-hover table-sm" id="users_table">
                      <thead class=" text-primary">
                         <th>USERNAME</th>
                         <th>FULL NAME</th>
                         {{!-- <th>HASHED PASSWORD</th> --}}
                         <th>ACCOUNT STATUS</th>
                         <th></th>
                      </thead>
                      <tbody>
                          {{#each users}}

                            <tr>
                              <td>{{this.Username}}</td>
                              <td>{{this.FullName}}</td>
                              {{!-- <td>{{this.Password}}</td> --}}
                              <td>{{this.UserStatus}}</td>
                              <td>
                                <a href="/viewuser?user_id={{this.Username}}" class="btn btn-sm btn-primary">View</a>
                                <a href="/update_user/{{this.Username}}" class="btn btn-sm btn-warning">Edit</a>
                              </td>
                            </tr>

                          {{/each}}
                      </tbody>
                    </table>
            </div>
    </div>
</div>

<script>
  $(document).ready(()=>{
    $("#users_table").DataTable({
      pageLength:5
    })
  })
</script>