<div class="row">
    {{!-- <div class="col-12">
        <h4 style="font-family: impact;" class="p-2 display-4 bg-dark text-white text-center">Busaries By School</h4>
    </div> --}}
    <div class="col-12 text-right">
         <a href="/RegisterBusary" class="btn btn-dark"><i class="fa fa-graduation-cap" aria-hidden="true"></i> New Bursary</a>
        <a href="/RegisterSecondarySchool" class="btn btn-success"><i class="fa fa-school" aria-hidden="true"></i> Register New School</a>
    </div>
    <div class="col-12">
        <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title "><i class="fa fa-th-list" aria-hidden="true"></i> Busaries By School</h4>
                  {{!-- <p class="card-category">All Projects</p> --}}
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                         <table class="table-sm table table-striped table-bordered table-hover" id="schools_table">
                            <thead class="bg-secondary">
                                {{!-- <th>SCHOOL ID</th> --}}
                                <th class="text-white">SCHOOL NAME</th>
                                <th class="text-white">DISTRICT</th>
                                <th class="text-white">CONTACT ADDRESS</th>
                                <th class="text-white">CONTACT PHONE</th>
                                <th class="text-white"></th>
                            </thead>
                            <tbody>
                                {{#each SecondarySchools}}
                                    <tr>
                                        {{!-- <td>{{this.SID}}</td> --}}
                                        <td>{{this.SecondarySchool}}</td>
                                        <td>{{this.DistrictName}}</td>
                                        <td>{{this.SchoolContactAddress}}</td>
                                        <td>{{this.SchoolContactPhone}}</td>
                                        <td>
                                            <a href="/BusariesList?sid={{this.SID}}" class="btn btn-sm btn-danger">
                                                Open List
                                            </a>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
        </div>
       
        <hr>
    </div>
    
</div>
<style>
    table.table tbody tr td{
        font-size: 14px;
    }
    .bg-info th{
        color: white;
    }
</style>
<script>
    $(document).ready(()=>{
        
        $("#schools_table").DataTable({
            pageLength:50,
            dom: 'Bfrtip',
            buttons: [
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        })
    })
</script>
