<div class="row">
    <div class="col-12">
        <h5 class="bg-dark text-white text-center p-2" style="font-weight:bold;">DIVIDENDS</h5>
    </div>

    <div class="col-5">
        <div class="card">
            <div class="card-body">
                <form action="/update-dividends" method="POST">
                    <div class="form-row">
                        <div class="col-12 form-group">
                            <label for="">Investment Name :</label>
                            <select name="Investment"class="form-control">
                                <option value="" selected disabled>Select</option>
                                {{#each Dividends}}
                                    <option value="{{this.ID}}">{{this.InvestmentName}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-6 form-group">
                            <label for="">Date Of Last Valuation :</label>
                            <input type="date" name="DateOfLastValuation" class="form-control">
                        </div>
                        <div class="col-6 form-group">
                            <label for="">Date Of Current Valuation :</label>
                            <input type="date" name="DateOfCurrentValuation" class="form-control">
                        </div>
                        <div class="col-6 form-group">
                            <label for="">Declared / Proposed :</label>
                            <select name="DeclaredProposed" class="form-control">
                                <option value="" selected disabled>Select</option>
                                <option value="1">Declared</option>
                                <option value="2">Proposed</option>
                            </select>
                        </div>
                        <div class="form-group col-6">
                            <label for="">Amount Declared :</label>
                            <input type="text" placeholder="Greater than 0" name="AmountDeclared" class="form-control">
                        </div>
                        <div class="form-group col-12">
                            <label for="">Dividend Per Share :</label>
                            <input type="text" placeholder="" name="DividendPerShare" class="form-control">
                        </div>
                         <div class="form-group col-6">
                            <label for="">Date Payable :</label>
                            <input type="date" placeholder="" name="DatePayable" class="form-control">
                        </div>
                         <div class="form-group col-6">
                            <label for="">Budget :</label>
                            <input type="number"  min="0"  name="Budget" class="form-control"> 
                        </div>
                        <div class="col-12">
                            <button class="btn btn-block btn-success">Save Data</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>