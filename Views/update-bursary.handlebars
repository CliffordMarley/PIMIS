<form class="row" action="/update-Bursary" method="POST">
    <div class="col-12">
        <h4 style="font-family: impact;" class="p-2 display-4 bg-dark text-white text-center">
            <i class="fa fa-graduation-cap" aria-hidden="true"></i> UPDATE BURSARY: {{RawBursary.FileRefNo}}
        </h4>
    </div>
    <div class="col-12">
        <hr>
    </div>
    <div class="col-5">
        <div class="card">
            <fieldset class="card-body">
                <legend style="font-weight:bold;font-size: 14px;">Student Information</legend>
                <div class="form-row form-group">
                     <input type="text" style="display:none;" value="{{RawBursary.ID}}" name="BID" />
                    <div class="col-6 form-group">
                        <label>File Ref</label>
                        <input type="text" readonly value="{{RawBursary.FileRefNo}}" placeholder="(Required)" class="form-control"
                            required />
                             <input type="text" hidden value="{{RawBursary.FileRefNo}}" name="FileRefNo" placeholder="(Required)" 
                            required />
                    </div>
                    <div class="col-12 form-group">
                        <label>Name Of Student</label>
                        <input type="text" value="{{RawBursary.StudentName}}" name="NameOfStudent" placeholder="(Required)" class="form-control"
                            required />
                    </div>
                    <div class="col-6 form-group">
                        <label for="">Gender</label>
                        <select name="Gender" class="form-control" required>
                            <option {{#ifeq RawBursary.Gender 1}} selected {{/ifeq}} value="1">Male</option>
                            <option {{#ifeq RawBursary.Gender 2}} selected {{/ifeq}} value="2">Female</option>
                        </select>
                    </div>
                    <div class="col-6 form-group">
                        <label for="">District Of Origin</label>
                        <select name="District" class="form-control">
                            {{#each Districts}}
                                <option {{#ifeq RawBursary.District this.ID}} selected {{/ifeq}} value="{{this.ID}}">{{this.DistrictName}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-6 form-group">
                        <label for="">Guardian Name</label>
                        <input type="text" value="{{RawBursary.GuardianName}}" name="GuardianName" placeholder="(Required)" class="form-control"  />
                    </div>
                    <div class="col-6 form-group">
                        <label for="">Guardian Phone</label>
                        <input type="text" value="{{RawBursary.GuardianContactPhone}}" name="GuardianContactPhone" placeholder="(Required)" class="form-control"  />
                    </div>
                    <div class="col-12 form-group">
                        <label for="">Guardian Contact Address</label>
                        <input type="text" value="{{RawBursary.GuardianContactAddress}}"  name="GuardianContactAddress" placeholder="(Required)" class="form-control"
                             />
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
    <div class="col-7">
        <div class="card">
            <div class="card-body">
                <fieldset>
                    <legend style="font-weight:bold;font-size: 14px;">Bursary Definition</legend>
                    <div class="form-row">
                        <div class="form-group col-12">
                            <label for="">Name Of Secondary School</label>
                            <select name="SecondarySchool" class="form-control">
                                {{#each SecondarySchools}}
                                    <option {{#ifeq RawBursary.SecondarySchoolId this.SID}} selected {{/ifeq}} value="{{this.SID}}">{{this.SecondarySchool}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-4 form-group">
                            <label for="">Cohort</label>
                            <input type="text" value="{{RawBursary.Cohort}}"  name="Cohort" placeholder="e.g 2019/2020" class="form-control">
                        </div>
                        <div class="col-8 form-group">
                            <label for="">Date Joined</label>
                            <input type="date" value="{{RawBursary.DateJoined}}"  name="DateJoined" placeholder="" class="form-control">
                        </div>
                        <div class="col-4 form-group">
                            <label for="">Classes Completed</label>
                            <input type="number" value="{{RawBursary.ClassesCompleted}}"  placeholder="Leave Blank if None" step="1" min="0" max="5"
                                name="ClassesCompleted" class="form-control">
                        </div>
                        <div class="col-4 form-group">
                            <label for="">Total Fees </label>
                            <input type="number" min="0" value="{{RawBursary.TotalFees}}"  name="TotalFees" placeholder="(Required)" class="form-control">
                        </div>
                        <div class="form-group col-4">
                            <label for="">Bursary Status</label>
                            <select name="BursaryStatus"  class="form-control">
                                {{#each BusaryStatus}}
                                    <option {{#ifeq RawBursary.Status this.ID}} selected {{/ifeq}} value="{{this.ID}}">{{this.BursaryStatus}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group col-12">
                            <label for="">Status On Bursary Notification To Guardian</label>
                            <select name="StatusToGuardian" class="form-control">
                                {{#each NotificationStatus}}
                                    <option {{#ifeq RawBursary.GuardianNotificationStatus this.ID}} selected {{/ifeq}} value="{{this.ID}}">{{this.NotificationStatus}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group col-12">
                            <label for="">Status On Bursary Notification To School</label>
                            <select name="StatusToSchool" class="form-control">
                                {{#each NotificationStatus}}
                                    <option {{#ifeq RawBursary.SchoolNotificationStatus this.ID}} selected {{/ifeq}} value="{{this.ID}}">{{this.NotificationStatus}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <fieldset>
                    <legend style="font-weight:bold;font-size: 14px;">Scheme Information</legend>
                    <div class="form-row">
                        <div class="col-3 form-group">
                            <label for="">Scheme Name</label>
                            <select name="SchemeName" class="form-control" required>
                                {{#each Schemes}}
                                    <option {{#ifeq RawBursary.SchemeId this.ID}} selected {{/ifeq}} value="{{this.ID}}">{{this.SchemeName}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-3 form-group">
                            <label for="">Scheme Type</label>
                            <select name="SchemeType" class="form-control" required>
                                {{#each SchemeTypes}}
                                    <option value="{{this.ID}}">{{this.SchemeTypeName}}</option>
                                {{/each}}
                            </select>
                        </div>


                        {{!-- <div class="col-1 form-group">
                            <label class="text-white">______________</label>
