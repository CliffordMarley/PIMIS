<div class="row">
<div class="col-12">
    
<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="pills-home-tab" data-toggle="pill" 
    data-target="#pills-home" type="button" role="tab" aria-controls="pills-home"
     aria-selected="true">Secondary School</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="pills-profile-tab" data-toggle="pill" data-target="#pills-profile" 
    type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Profile</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="pills-contact-tab" data-toggle="pill" data-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Contact</button>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <div class="row">
            <div class="col-12">
                <h3 class="p-2 bg-dark text-white">Secondary Schools</h3>
                <hr>
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                    <div class="col-9">
                        <h5>All Secondary Schools</h5>
                        <table id="secondarySchoolsList"  class="data-table-enabled table table-sm table-bordered table-striped">
                            <thead>
                                {{!-- <th>UUID</th> --}}
                                <th style="font-size:14px !important;font-weight:700 !important;">Secondary_School_Name</th>
                                <th style="font-size:14px !important;font-weight:700 !important;">Address</th>
                                <th style="font-size:14px !important;font-weight:700 !important;">Phone</th>
                                <th style="font-size:14px !important;font-weight:700 !important;">District</th>
                                <th></th>
                            </thead>
                            <tbody>

                                {{#each SecondarySchools}}
                                    <tr>
                                        {{!-- <td>{{this.ID}}</td> --}}
                                        <td style="font-size:11px !important;font-weight:500 !important;">{{this.SecondarySchool}}</td>
                                        <td style="font-size:11px !important;font-weight:500 !important;">{{this.SchoolContactAddress}}</td>
                                        <td style="font-size:11px !important;font-weight:500 !important;">{{this.SchoolContactPhone}}</td>
                                        <td style="font-size:11px !important;font-weight:500 !important;">{{this.District}}</td>
                                        <td>
                                            <button style="width:30px;height:30px;border-radius:50%;color:black;padding:3px;background-color:rgb(243, 243, 2);">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <div class="col-3">
                        <h6 class="p-1 text-center text-white bg-dark">
                            Insert School
                        </h6>
                        <form class="form ui form form-row border border-secondary">
                            <div class="col-12 form-group">
                                <labelstyle="color:black;">School Name :</label>
                                <input type="text" placeholder="(Required)" class="form-control" required/>
                            </div>
                            <div class="col-12 form-group">
                                <labelstyle="color:black;">Contact Address :</label>
                                <input type="text" placeholder="(Required)" class="form-control" required/>
                            </div>
                            <div class="col-12">
                                <label style="color:black;">Phone Number :</label>
                                <input placeholder="(Required)" type="tel" class="form-control" required/>
                            </div>
                            <div class="col-12 text-right">
                                <button class="btn btn-success">Save <i class="icon check circle"></i></button>
                            </div>
                        </form>
                    </div>
                    
                </div>
                    </div>
                </div>
            </div>
        </div>
        
  </div>
  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">...</div>
  <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">...</div>
</div>

</div>
</div>

<script>
    $(()=>{
        $('.data-table-enabled').DataTable({
            pageLength:10,
            dom: 'Bfrtip',
            buttons: [
                'excel',
                'csvHtml5',
                {
                    extend: 'pdfHtml5',
                    orientation: 'landscape',
                    pageSize: 'LEGAL'
                }
            ],
        })
    })
</script>