<div class="row">
  <div class="col-3">
    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" 
      aria-controls="v-pills-home" aria-selected="true">Personalized Theme</a>
      <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" 
      role="tab" aria-controls="v-pills-profile" aria-selected="false">Secondary Schools</a>
      <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" 
      role="tab" aria-controls="v-pills-messages" aria-selected="false">Schemes</a>
      <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" 
      role="tab" aria-controls="v-pills-settings" aria-selected="false">Subjects</a>
      <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" 
      role="tab" aria-controls="v-pills-settings" aria-selected="false">Investment Sector</a>
      <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" 
      role="tab" aria-controls="v-pills-settings" aria-selected="false">District</a>
      {{!-- <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" 
      role="tab" aria-controls="v-pills-settings" aria-selected="false">Subjects</a> --}}
      
    </div>
  </div>
  <div class="col-9">
    <div class="tab-content" id="v-pills-tabContent">
      <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
        <div class="row">
            <div class="col-12">
                <h3 class="p-2 bg-dark text-white">Personalized Theme</h3>
                <hr>
                <div class="row">
                    <div class="col-4"><h5>Background Color:</h5></div>
                </div>
            </div>
        </div>
    </div>
      <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
         <div class="row">
            <div class="col-12">
                <h3 class="p-2 bg-dark text-white">Secondary Schools</h3>
                <hr>
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                    <div class="col-8">
                        <h5>All Secondary Schools</h5>
                        <table id="secondarySchoolsList"  class="data-table-enabled table table-sm table-bordered table-striped">
                            <thead>
                                {{!-- <th>UUID</th> --}}
                                <th style="font-size:14px !important;font-weight:700 !important;">Secondary_School_Name</th>
                                <th style="font-size:14px !important;font-weight:700 !important;">Address</th>
                                <th style="font-size:14px !important;font-weight:700 !important;">Phone</th>
                                <th style="font-size:14px !important;font-weight:700 !important;">District</th>
                                <th></th>
                            </thead>
                            <tbody>

                                {{#each SecondarySchools}}
                                    <tr>
                                        {{!-- <td>{{this.ID}}</td> --}}
                                        <td style="font-size:11px !important;font-weight:500 !important;">{{this.SecondarySchool}}</td>
                                        <td style="font-size:11px !important;font-weight:500 !important;">{{this.SchoolContactAddress}}</td>
                                        <td style="font-size:11px !important;font-weight:500 !important;">{{this.SchoolContactPhone}}</td>
                                        <td style="font-size:11px !important;font-weight:500 !important;">{{this.District}}</td>
                                        <td>
                                            <button style="width:30px;height:30px;border-radius:50%;color:black;padding:3px;background-color:rgb(243, 243, 2);">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <div class="col-4">
                        <h6 class="p-1 text-center text-white bg-dark">
                            Insert School
                        </h6>
                        <div class="form ui form form-row border border-secondary">
                            <div class="col-12 form-group">
                                <labelstyle="color:black;">School Name :</label>
                                <input type="text" placeholder="(Required)" class="form-control" required/>
                            </div>
                            <div class="col-12 form-group">
                                <labelstyle="color:black;">Contact Address :</label>
                                <input type="text" placeholder="(Required)" class="form-control" required/>
                            </div>
                            <div class="col-12">
                                <label style="color:black;">Phone Number :</label>
                                <input type="tel" class="form-control" required/>
                            </div>
                            <div class="col-12 text-right">
                                <button class="btn btn-success">Save <i class="icon check circle"></i></button>
                            </div>
                        </div>
                    </div>
                    
                </div>
                    </div>
                </div>
            </div>
        </div>
        
      </div>
      <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">...</div>
      <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">...</div>
    </div>
  </div>
</div>

<script>
    $(()=>{
        $('.data-table-enabled').DataTable({
            pageLength:10,
            dom: 'Bfrtip',
            buttons: [
                'excel',
                'csvHtml5',
                {
                    extend: 'pdfHtml5',
                    orientation: 'landscape',
                    pageSize: 'LEGAL'
                }
            ],
        })
    })
</script>